doctype html
html(lang="en")
  head
    title MedCab APIs - A Clinic Management System
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="/styles/index.css")
    link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap")
  body
    .wrapper
      nav.navbar
        h1.nav-title Clinic Management System
        .nav-actions
          button.btn(onclick="navigateToDocs()") View API Docs
          a.btn-link(href="mailto:devs@example.com") Contact Developers

      main.main-content
        section.card.left-section
          img(src="/images/clinic.jpg", alt="Clinic Image")

        section.card.right-section
          h2.section-title Key Features
          ul.feature-list
            li Secure and fast API endpoints
            li Easy integration for clinic workflows
            li Comprehensive documentation
          button.btn(onclick="navigateToDocs()") View API Docs

      footer.footer
        p.footer-text Â© 2024 MedCab APIs. All rights reserved.
        .footer-actions
          button.btn(onclick="navigateToDocs()") View API Docs
          a.btn-link(href="mailto:devs@example.com") Contact Developers

    script(src="/scripts/script.js")
